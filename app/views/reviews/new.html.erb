


<div class="container">

  <h1 class="text-center"> Add a new review </h1>

  <%= simple_form_for([@restaurant, @review]) do |r|%>

  <div class="row form-group">
    <%= r.input :rating, collection: [0, 1, 2, 3, 4, 5], as: :select %>
  </div>

  <div class="row form-group">
    <%= r.input :content %>
  </div>

  <div class="row form-group text-center">
    <%= r.submit "Add a Restaurant", class: "btn btn-primary" %>
  </div>

  <% end %>

</div>
