<div class="container">

  <div class="restaurant-card">
    <h3> <%=  @restaurant.name %></h3>
    <p> Address: <em> <%= @restaurant.address  %></em>  </p>
    <p> Phone Number : <%= @restaurant.phone_number %></p>
    <p> <%=@restaurant.category.capitalize  %> </p>
  </div>

  <h2> Reviews </h2>

  <% @reviews.each do |review| %>
    <div class ="restaurant-card">
      <h2> <%= review.rating %> </h2>
      <p><%= review.content %></p>
    </div>
  <% end %>

  <%= link_to "Add a new review to this restaurant", new_restaurant_review_path(@restaurant.id) %>

</div>
